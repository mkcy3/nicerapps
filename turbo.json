{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NEXT_PUBLIC_VERCEL_URL", "NODE_ENV"],
  "pipeline": {
    "build": {
      "env": ["STRIPE_SECRET_KEY", "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
